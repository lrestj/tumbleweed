    "modules-left": [
        "hyprland/workspaces",
        "custom/menu",
        "hyprland/submap",
        "cpu",
        "temperature",
        "memory",
        "custom/scan",
        "custom/kalk",
        "custom/text",
        "custom/fm",
        "custom/media"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "idle_inhibitor",
        "mpd",
        "pulseaudio",
        "backlight",
        "tray",
        "clock",
        "battery",
        "power-profiles-daemon",
        "hyprland/language",
        "custom/power"
    ],

    "custom/menu": {
